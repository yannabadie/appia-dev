{
  "name": "jarvys_dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",

  // On ne conserve que les features extrêmement robustes
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": { "version": "lts" }
  },

  // Script bootstrap (voir section 2)
  "postCreateCommand": "/bin/bash /workspaces/appia-dev/.devcontainer/setup.sh",

  // Redirections de ports visibles dans Codespaces
  "forwardPorts": [8080, 54321],

  // Secrets GitHub ⇨ variables d’environnement dans le conteneur
  "containerEnv": {
    "OPENAI_API_KEY": "${{ secrets.OPENAI_API_KEY }}",
    "SUPABASE_URL":   "${{ secrets.SUPABASE_URL }}",
    "SUPABASE_KEY":   "${{ secrets.SUPABASE_KEY }}",
    "GCP_SA_JSON":    "${{ secrets.GCP_SA_JSON }}"
  },

  "customizations": {
    "vscode": {
      "settings": {
        // L’interpréteur Poetry sera détecté automatiquement à l’ouverture
        "python.defaultInterpreterPath": "/home/vscode/.cache/pypoetry/virtualenvs/*/bin/python"
      }
    }
  }
}
