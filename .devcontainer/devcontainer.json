{
  "name": "jarvys_dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/poetry:1": {}
  },

  // Exécuté à chaque build Codespace
  "postCreateCommand": "pip install poetry pre-commit && poetry install --with dev && pre-commit install",

  "forwardPorts": [54321],

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/home/vscode/.cache/pypoetry/virtualenvs/jarvys-dev-*/bin/python"
      }
    }
  },

  // Variables disponibles dans le conteneur :
  "containerEnv": {
    "OPENAI_API_KEY": "${{ secrets.OPENAI_API_KEY }}",
    "SUPABASE_URL":     "${{ secrets.SUPABASE_URL }}",
    "SUPABASE_KEY":     "${{ secrets.SUPABASE_KEY }}"
  }
}
